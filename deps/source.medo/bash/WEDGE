# Wedge definition for bash
#
# Loaded by deps/wedge.sh.

set -o nounset
set -o pipefail
set -o errexit

# sourced
WEDGE_NAME='bash'

# validate requested version against this list
# I guess it would be better to pass WEDGE_VERSION as an INPUT then, so we can
# have version-specific logic.

WEDGE_VERSION_LIST='4.4 5.2'
# default version that's used
WEDGE_VERSION='4.4'

wedge-make() {
  local src_dir=$1
  local build_dir=$2
  local install_dir=$3

  # --without-bash-malloc for Alpine only -- musl libc incompatibility?
  # https://patchwork.ozlabs.org/project/buildroot/patch/20170523171931.18744-1-dsabogalcc@gmail.com/
  time $src_dir/configure --without-bash-malloc --prefix=$install_dir

  time make
}

wedge-install() {
  local build_dir=$1

  pushd $build_dir

  time make install

  popd
}

wedge-smoke-test() {
  local install_dir=$1

  $install_dir/bin/bash -c 'echo "hi from bash"'
  $install_dir/bin/bash --version
}
