# Wedge definition for bash
#
# Loaded by deps/wedge.sh.

set -o nounset
set -o pipefail
set -o errexit

# sourced
WEDGE_NAME='bash'
WEDGE_VERSION='4.4'

wedge-make() {
  local src_dir=$1
  local build_dir=$2
  local install_dir=$3

  time $src_dir/configure --prefix=$install_dir

  time make
}

wedge-install() {
  local build_dir=$1

  pushd $build_dir

  time make install

  popd
}

wedge-smoke-test() {
  local install_dir=$1

  $install_dir/bin/bash -c 'echo "hi from bash"'
}
